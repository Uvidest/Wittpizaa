<section class="custom-collection-list">
  <div class="page-width">
    <h1 class="custom-collection-list__title h1">{{ section.settings.title }}</h1>
    <div class="custom-collection-list__wrapper">
      {% for item in section.blocks %}
        <div class="custom-collection-list__item">
          <a href="{{item.settings.collection.url}}">
            {{ item.settings.collection.featured_image | image_url: width:592 | image_tag }}
          </a>
          <a class="custom-collection-list__link" href="{{item.settings.collection.url}}">{{item.settings.collection.title}}</a>
        </div>
      {% endfor %}
    </div>
  </div>
</section>
<style>
  .custom-collection-list{
    background-color: #000;
  }
  .custom-collection-list__title.h1 {
    color: #fff;
    text-align: center;
    text-transform: uppercase;
    margin: 0;
    padding: 48px 0;
  }
  .custom-collection-list__wrapper {
    display: flex;
    gap: 24px;
    padding-bottom: 48px;
  }
  .custom-collection-list__item {
    position: relative;
    flex-basis: calc(33% - 12px);
    transition: transform .3s ease-in-out;
  }
  .custom-collection-list__item:hover{
    transform: scale(1.05);
  }
  .custom-collection-list__item > a > img {
    width: 100%;
    height: auto;
    object-fit: cover;
    border-radius: 20px;
  }
  .custom-collection-list__link {
    position: absolute;
    text-decoration: none;
    left: 24px;
    bottom: 24px;
    color: #171719;
    font-family: Oswald;
    font-size: 24px;
    font-style: normal;
    font-weight: 600;
    line-height: 59px; 
    text-transform: uppercase;
    background-color: #fff;
    border-radius: 50px;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 222px;
    height: 59px;
  }
  @media (max-width: 992px) {
    .custom-collection-list__wrapper {
      flex-wrap: wrap;
      justify-content: center;
    }
    .custom-collection-list__item {
      flex-grow: 1;
      max-width: 440px;
      min-width: 345px;
    }
  }
</style>
{% schema %}
{
    "name": "Custom collection list",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Title"
      }
    ],
    "blocks": [
      {
        "type": "collection-item",
        "name":"Collection item",
        "settings": [
          {
            "type": "collection",
            "id": "collection",
            "label": "Collection"
          }
        ] 
      }
    ],
    "presets": [
      {
        "name": "Custom collection list"
      }
    ]
  }
{% endschema %}