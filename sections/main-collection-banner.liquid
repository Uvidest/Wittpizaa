<style>
  .section-{{ section.id }} {
    padding-top: calc({{ section.settings.st }}px + 80px);
    padding-bottom: {{ section.settings.sb }}px;
    padding-left: 48px;
    padding-right: 48px;
  {% if section.settings.background-image != blank %}
    background-image: url("{{ section.settings.background-image.src | img_url: 'master' }}");
  {% else %}
    background: #8c8a8a;
  {% endif %}
    background-position: 50% 50%;
    background-repeat: no-repeat;
    background-size: cover;
  }

  @media screen and (max-width: 768px) {
    .section-{{ section.id }} {
      padding-top: calc({{ section.settings.stm }}px + 80px);
      padding-bottom: {{ section.settings.sbm }}px;
      padding-left: 15px;
      padding-right: 15px;
    }
  }


</style>
<style>
  .banner-text-overlay-title{
    text-align: center;
    font-size: 8rem !important;
    color: #fff;
    /*margin: 0;*/
  }
  .banner-text-overlay-text{
    line-height: 1.2;
    color: #fff;
    margin-top: 16px;
    font-size: 30px !important;
    text-align: center;
    max-width: 985px;
  }
  @media screen and (max-width: 1450px) {
    .banner-text-overlay-title {
      font-size: 64px !important;
    }
    .banner-text-overlay-text {
      font-size: 24px !important;
    }
  }
  @media screen and (max-width: 990px) {
    .banner-text-overlay-title{
      font-size: calc(2.32rem + 4.5vw)!important;
    }
    .banner-text-overlay-text {
      font-size: 18px !important;
    }
    }
</style>

<div class="banner-text-overlay section-{{ section.id }}">
  <div class="banner-text-overlay-wrapper">
    <h1 class="banner-text-overlay-title h1 page-width">
      {{ collection.title }}
    </h1>
    <div class="banner-text-overlay-text regular page-width">
      {{ collection.description }}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Collection banner",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "background-image",
      "label": "Background image"
    },
    {
      "type": "header",
      "content": "Space desktop"
    },
    {
      "type": "range",
      "id": "st",
      "label": "Space top",
      "unit": "px",
      "min": 0,
      "max": 200,
      "step": 2,
      "default": 16
    },
    {
      "type": "range",
      "id": "sb",
      "label": "Space bottom",
      "unit": "px",
      "min": 0,
      "max": 200,
      "step": 2,
      "default": 16
    },
    {
      "type": "header",
      "content": "Space mobile"
    },
    {
      "type": "range",
      "id": "stm",
      "label": "Space top",
      "unit": "px",
      "min": 0,
      "max": 200,
      "step": 2,
      "default": 16
    },
    {
      "type": "range",
      "id": "sbm",
      "label": "Space bottom",
      "unit": "px",
      "min": 0,
      "max": 200,
      "step": 2,
      "default": 16
    }
  ],
  "presets": [
    {
      "name": "Collection banner"
    }
  ]
}
{% endschema %}