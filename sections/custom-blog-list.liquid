<section class="custom-blog-list">
  <div class="page-width">
    <h1 class="custom-blog-list__title h1">{{ section.settings.title }}</h3>
    <div class="custom-blog-list__wrapper">
      {% for article in section.settings.blog.articles %}
        <div class="custom-blog-list__article article">
          {% if article.image != blank %}
            <a href="{{article.url}}" class="article__image">{{ article.image | image_url: height: 235 | image_tag }}</a>
          {% endif %}
          <a href="{{ article.url}}" class="article__title h2">{{ article.title }}</a>
          <p
            class="article__content regular">{{ article.content }}</p>
          {% if section.settings.show-link == true %}
            <a href="{{article.url}}" class="article__link regular">
              {{ section.settings.text-link }}
              {{ section.settings.icon-link }}
            </a>
          {% endif %}
        </div>
      {% endfor %}
    </div>
    <a href="{{section.settings.blog.url}}" class="custom-blog-list__link regular">{{section.settings.text-btn}}</a>

  </div>
</section>
<style>
  .custom-blog-list {
    background-color: #e0ded4;
    padding-bottom: 48px;
  }
  .custom-blog-list__title {
    text-transform: uppercase;
    text-align: center;
    padding: 48px 0;
    margin: 0;
  }
  .custom-blog-list__link {
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto;
    text-decoration: none;
    background-color: #fff;
    height: 42px;
    width: 242px;
    border-radius: 25px;
    color: #171719;
    font-family: Oswald;
    font-size: 18px;
    font-style: normal;
    font-weight: 600;
    line-height: 130%;
    text-transform: capitalize;
    transition: transform .3s ease-in;
  }
  .custom-blog-list__link:hover{
    transform: scale(1.1);
  }
  .custom-blog-list__wrapper {
    display: flex;
    flex-wrap: wrap;
    gap: 24px;
    padding-bottom: 48px;
  }
  .article {
    width: calc(33.33% - 24px * 2 / 3);
    display: flex;
    flex-direction: column;
    background-color: #fff;
    border-radius: 15px;
  }
  .article__image > img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform .3s ease-in-out;
  }
  .article__image {
    border-radius: 15px 15px 0 0;
    overflow: hidden;
  }
  .article__image > img:hover{
    transform: scale(1.1);
  }
  .article__title {
    text-decoration: none;
    color: rgb(23, 23, 25);
    padding: 24px 5px;
    text-align: center;
  }
  .article__content.regular {
    font-size: 20px;
    text-align: center;
    margin: 0;
    padding: 0 30px;
    color: #000;
    flex-grow: 1;
  }
  .article__link {
    text-transform: uppercase;
    padding-top: 24px;
    padding-bottom: 30px;
    display: flex;
    align-items: center;
    justify-content: center;
    column-gap: 5px;
    font-size: 16px;
    font-weight: 600;
    text-decoration: none;
    color: rgb(23, 23, 25);
  }
  .article__link:hover,
  .article__title:hover {
    color: #d0672a;
    text-decoration: underline;
  }

  @media(max-width: 992px) {
    .custom-blog-list__wrapper {
      flex-wrap: wrap;
      justify-content: center;
    }
    .article {
      min-width: 345px;
    }
  }
  @media (max-width: 768px) {
    .article {
      flex-grow: 1;
    }
  }
  @media (max-width: 576px) {
    .custom-blog-list {
      padding-bottom: 32px;
    }
    .article__title {
      padding-top: 24px;
      padding-bottom: 16px;
      font-size: 16px;
    }
    .article__link {
      padding-top: 16px;
      padding-bottom: 24px;
    }
    .article__content.regular {
      padding: 0 15px;
    }
  }
</style>
{% schema %}
  {
    "name": "Blog list",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Title"
      },
      {
        "type": "text",
        "id": "text-btn",
        "label": "Button label"
      },
      {
        "type": "checkbox",
        "id": "show-link",
        "label": "Show button in the article",
        "default": true
      },
      {
        "type": "text",
        "id": "text-link",
        "default": "Read more",
        "label": "Button label for article"
      },
      {
        "type": "html",
        "id": "icon-link",
        "label": "Icon for article button"
      }, {
        "type": "blog",
        "id": "blog",
        "label": "Blog"
      }
    ],
    "blocks": [],
    "presets": [
      {
        "name": "Blog list"
      }
    ]
  }
{% endschema %}