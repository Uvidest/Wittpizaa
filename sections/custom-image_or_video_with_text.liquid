
<style>
    .section-{{ section.id }} {
        padding-top: {{ section.settings.space_top }}px;
        padding-bottom: {{ section.settings.space_bottom }}px;
        background: {{ section.settings.bg_color }};
    }

    @media screen and (max-width: 768px) {
        .section-{{ section.id }} {
            padding-top: {{ section.settings.space_top_mobile }}px;
            padding-bottom: {{ section.settings.space_bottom_mobile }}px;
        }
    }
</style>
<style>

    .image_or_video_with_text-wrapper {
        display: flex;
        flex-wrap: wrap;
        border-radius: 20px;
        overflow: hidden;
        background: #fff;
    }

    .image_or_video_with_text-wrapper.reverse {
        flex-direction: row-reverse;
    }

    .image_or_video_with_text-text-block,
    .image_or_video_with_text-video-block {
        width: 50%;
    }

    .image_or_video_with_text-text-block {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 15px;
    }

    .text-block-image {
        margin-bottom: 24px;
    }

    .text-block-image img {
        width: 172px;
        height: 172px;
        object-fit: contain;
        display: block;
    }

    .video-or-text-block-container {
        height: 100%;
    }

    .video-or-text-block-container video,
    .video-or-text-block-container img {
        height: 100%;
        width: 100%;
        object-fit: cover;
        min-height: 470px;
    }

    .text-block-title {
        color: #171719;
        font-size: 40px;
        font-style: normal;
        font-weight: 700;
        line-height: 1;
        text-transform: uppercase;
        margin: 0;
        margin-bottom: 24px;
      text-align: center;
    }

    .text-block-text {
        color: #171719;
        text-align: center;
        font-size: 20px;
        font-style: normal;
        font-weight: 400;
        line-height: 130%; /* 26px */
        max-width: 646px;
    }

    @media screen and (max-width: 1050px) {
        .text-block-image img {
            width: 92px;
            height: 92px;
        }

        .video-or-text-block-container video, .video-or-text-block-container img {
            min-height: 270px;
        }
    }

    @media screen and (max-width: 700px) {
        .text-block-title{
            font-size: 29px;
            margin-bottom: 16px;
        }
        .video-or-text-block-container video, .video-or-text-block-container img {
            min-height: 270px;
        }

        .image_or_video_with_text-text-block,
        .image_or_video_with_text-video-block {
            width: 100%;
        }
        .image_or_video_with_text-wrapper.reverse,
        .image_or_video_with_text-wrapper {
            flex-direction: column-reverse;
        }
        .text-block-text{
            font-size: 18px;
        }

        .image_or_video_with_text-text-block{
            padding-bottom: 32px;
        }
    }
</style>

{% if section.settings.image != blank or section.settings.video != blank %}
    <div {%  if section.settings.sectionId != blank %}data-custom-section-id="{{ section.settings.sectionId }}"{% endif %} class="image_or_video_with_text section-{{ section.id }}">
        <div class="page-width">
            <div class="image_or_video_with_text-wrapper {% if section.settings.media_left == true %}reverse{% endif %}">
                <div class="image_or_video_with_text-text-block">
                    {% if section.settings.image_text != blank %}
                        <div class="text-block-image">
                            <img src="{{ section.settings.image_text.src | img_url }}"
                                 alt="{{ section.settings.image_text.alt }}">
                        </div>
                    {% endif %}

                    <h2 class="text-block-title">
                        {{ section.settings.title }}
                    </h2>
                    <div class="text-block-text">
                        {{ section.settings.text }}
                    </div>
                </div>
                <div class="image_or_video_with_text-video-block">
                    <div class="video-or-text-block-container">

                        {% if section.settings.video != blank %}
                            {{
                            section.settings.video
                            | video_tag: image_size: '600x', loop: true, controls: true, muted: false, autoplay: section.settings.autoplay
                            }}
                        {% else %}
                            <img src="{{ section.settings.image.src | img_url: "large" }}"
                                 alt="{{ section.settings.image.alt }}">
                        {% endif %}


                    </div>
                </div>
            </div>
        </div>
    </div>
{% endif %}

{% schema %}
{
  "name": "Image or video with text",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "default": "Title",
      "label": "Title"
    },
    {
      "type": "text",
      "id": "text",
      "default": "Some text",
      "label": "Text"
    },
    {
      "type": "image_picker",
      "id": "image_text",
      "label": "Image fro text"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "video",
      "id": "video",
      "label": "Video"
    },
    {
      "type": "checkbox",
      "id": "autoplay",
      "default": false,
      "label": "Autoplay"
    },
    {
      "type": "checkbox",
      "id": "media_left",
      "default": false,
      "label": "Image or video left"
    },
    {
      "type": "color",
      "id": "bg_color",
      "default": "#F4F4F6",
      "label": "Background color"
    },
    {
      "type": "text",
      "id": "sectionId",
      "label": "Id section for tabs on header"
    },
    {
      "type": "header",
      "content": "Space desktop"
    },
    {
      "type": "range",
      "id": "space_top",
      "label": "Space top",
      "unit": "px",
      "min": 0,
      "max": 200,
      "step": 2,
      "default": 16
    },
    {
      "type": "range",
      "id": "space_bottom",
      "label": "Space bottom",
      "unit": "px",
      "min": 0,
      "max": 200,
      "step": 2,
      "default": 16
    },
    {
      "type": "header",
      "content": "Space mobile"
    },
    {
      "type": "range",
      "id": "space_top_mobile",
      "label": "Space top",
      "unit": "px",
      "min": 0,
      "max": 200,
      "step": 2,
      "default": 16
    },
    {
      "type": "range",
      "id": "space_bottom_mobile",
      "label": "Space bottom",
      "unit": "px",
      "min": 0,
      "max": 200,
      "step": 2,
      "default": 16
    }
  ],
  "presets": [
    {
      "name": "Image or video with text"
    }
  ]
}
{% endschema %}
