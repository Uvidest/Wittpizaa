<style>
    .section-{{ section.id }} {
        padding-top: {{ section.settings.st }}px;
        padding-bottom: {{ section.settings.sb }}px;
    }

    @media screen and (max-width: 768px) {
        .section-{{ section.id }} {
            padding-top: {{ section.settings.stm }}px;
            padding-bottom: {{ section.settings.sbm }}px;
        }
    }

</style>

<style>
    .awards-reviews-item-text p{
        margin: 0;
        margin-bottom: 1.6rem;
    }

    .awards-reviews-item-text > * {
        margin: 0 !important;
    }

    .awards-reviews-wrapper {
        padding: 0 1.6rem;
    }

    .awards-reviews-list {
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
    }

    .awards-reviews-item {
        width: calc(25% - (1rem * 3) / 4);
        display: flex;
        flex-direction: column;
    }

    .awards-reviews-item-image {
        position: relative;
        display: block;
        overflow: hidden;
        cursor: pointer;
    }

    .awards-reviews-item-image:before {
        content: '';
        display: block;
        padding-top: 56%;
    }
    .awards-reviews-item-text strong{
        font-weight: 600;
    }
    .awards-reviews-item-image-link,
    .awards-reviews-item-image img {
        position: absolute;
        top: 0;
        left: 0;
        height: 100%;
        width: 100%;
        object-fit: cover;
        transition-duration: 300ms;

    }
    .awards-reviews-item-image:hover img{
        transform: scale(1.1);
        transition-duration: 300ms;
    }


    .awards-reviews-item-text-box {
        padding: 32px;
        /*height: 100%;*/
        flex-grow: 1;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

    .awards-reviews-item-date {
        display: flex;
        align-items: center;
        gap: 0.4rem;
        font-size: calc(1.2rem + 0.0vw);
        margin-bottom: 5px;
    }

    .awards-reviews-item-date svg {
        height: 12.5px;
        width: 12.5px;
    }

    .awards-reviews-item-text-box-value {
        display: flex;
        gap: 0.32rem;
        flex-direction: column;
    }
    .awards-reviews-item-title{
        text-decoration: none;
        transition-duration: 300ms;
    }

    .awards-reviews-item-button:hover,
    a.awards-reviews-item-title:hover{
        color: #d0672a!important;
        transition-duration: 300ms;
        text-decoration: underline;
    }
    .awards-reviews-item-title.h2 {
        margin-bottom: 6px;
    }

    .awards-reviews-item-title.h3 {
        margin-top: 8px;
        margin-bottom: 5.6px;
        font-size: calc(1.84rem + 0.3vw);

    }

    .awards-reviews-item-button {
        font-size: 1.6rem;
        font-weight: 600;
        letter-spacing: 0.01em;
        line-height: 1.2em;
        text-decoration: none;
        margin-top: 1.6rem;
        font-family: var(--font-heading-family);
        color: #000;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        transition-duration: 300ms;
    }
    .awards-reviews-item-button svg{
        height: 1.6rem;
        width: 1.6rem;
        position: relative;
        top: 2px
    }
    .awards-reviews-item-add-text{
        font-size: 1.105rem; !important;
        opacity: 80%;
        margin-top: 1.6rem;
    }
    @media screen and (max-width: 1200px) {
        .awards-reviews-item {
            width: calc(33.33% - (1.6rem * 2) / 3);
        }
    }
    @media screen and (max-width: 990px) {
        .awards-reviews-item {
            width: calc(50% - 1.6rem / 2);
        }
    }
    @media screen and (max-width: 768px) {
        .awards-reviews-item {
            width: 100%;
        }
        .awards-reviews-item-text-box{
            padding: 16px;
        }
        .awards-reviews-item-title.h3 {
            font-size: calc(1.92rem + 0.4vw);
        }
    }
</style>

<div class="awards-reviews section-{{ section.id }}">
    <div class="awards-reviews-wrapper">
        <div class="awards-reviews-list">
            {% for block in section.blocks %}
                <div style="background: {{ block.settings.bg_color }};"
                     class="awards-reviews-item text_block block-{{ section.id }}-{{ forloop.index }}">
                    {% if block.settings.image != blank %}
                        <div class="awards-reviews-item-image size-{{ block.settings.image_ratio }}">
                            {%- capture sizes -%}
                                {{ settings.page_width | divided_by: 5 | round }}px}}
                            {%- endcapture -%}

                            {{ block.settings.image | image_url: width: 1946 | image_tag:
                            loading: lazy,
                            sizes: sizes,
                            widths: '246, 493, 600, 713, 823, 990, 1100, 1206, 1346, 1426, 1646, 1946'
                            }}
                            {% if block.settings.button_url != blank %}
                                <a href="{{ block.settings.button_url }}"  class="awards-reviews-item-image-link">

                                </a>
                            {% endif %}
                        </div>
                    {% endif %}
                    <div class="awards-reviews-item-text-box">
                        <div class="awards-reviews-item-text-box-value">
                            {% if block.settings.date != blank %}
                                <div style="color: {{ block.settings.text_color }}" class="awards-reviews-item-date">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"
                                         fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"
                                         stroke-linejoin="round" class="feather feather-calendar">
                                        <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                                        <line x1="16" y1="2" x2="16" y2="6"></line>
                                        <line x1="8" y1="2" x2="8" y2="6"></line>
                                        <line x1="3" y1="10" x2="21" y2="10"></line>
                                    </svg>
                                    {{ block.settings.date }}
                                </div>
                            {% endif %}

                            {% if block.settings.title != blank %}
                                {% if block.settings.title_url == true and block.settings.button_url != blank %}
                                    <a href="{{ block.settings.button_url }}" style="color: {{ block.settings.text_color }}" href="{{ block.settings.url }}"
                                         class="awards-reviews-item-title {{ block.settings.title_size }}">
                                        {{ block.settings.title }}
                                    </a>
                                {% else %}
                                    <div style="color: {{ block.settings.text_color }}" href="{{ block.settings.url }}"
                                         class="awards-reviews-item-title {{ block.settings.title_size }}">
                                        {{ block.settings.title }}
                                    </div>
                                {% endif %}

                            {% endif %}
                            {% if block.settings.text != blank %}
                                <div style="color: {{ block.settings.text_color }}"
                                     class="awards-reviews-item-text regular">
                                    {{ block.settings.text }}
                                </div>
                            {% endif %}
                            {% if block.settings.add_text != blank %}
                                <div style="color: {{ block.settings.text_color }}"
                                     class="awards-reviews-item-add-text regular">
                                    {{ block.settings.add_text }}
                                </div>
                            {% endif %}
                        </div>
                        {% if block.settings.button_url != blank and block.settings.button_text != blank %}
                            <a style="color: {{ block.settings.text_color }}" href="{{ block.settings.button_url }}" class="awards-reviews-item-button">
                                {{ block.settings.button_text }}
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"
                                     fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"
                                     stroke-linejoin="round" class="feather feather-arrow-right">
                                    <line x1="5" y1="12" x2="19" y2="12"></line>
                                    <polyline points="12 5 19 12 12 19"></polyline>
                                </svg>
                            </a>
                        {% endif %}
                    </div>

                </div>
            {% endfor %}
        </div>


    </div>
</div>

{% schema %}
{
  "name": "Awards-reviews",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "Space desktop"
    },
    {
      "type": "range",
      "id": "st",
      "label": "Space top",
      "unit": "px",
      "min": 0,
      "max": 200,
      "step": 2,
      "default": 16
    },
    {
      "type": "range",
      "id": "sb",
      "label": "Space bottom",
      "unit": "px",
      "min": 0,
      "max": 200,
      "step": 2,
      "default": 16
    },
    {
      "type": "header",
      "content": "Space mobile"
    },
    {
      "type": "range",
      "id": "stm",
      "label": "Space top",
      "unit": "px",
      "min": 0,
      "max": 200,
      "step": 2,
      "default": 16
    },
    {
      "type": "range",
      "id": "sbm",
      "label": "Space bottom",
      "unit": "px",
      "min": 0,
      "max": 200,
      "step": 2,
      "default": 16
    }
  ],
  "blocks": [
    {
      "type": "block",
      "name": "Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Title"
        },
        {
          "type": "checkbox",
          "id": "title_url",
          "label": "Title link",
          "default": true
        },
        {
          "type": "select",
          "id": "title_size",
          "options": [
            {
              "value": "h2",
              "label": "H2"
            },
            {
              "value": "h3",
              "label": "H3"
            }
          ],
          "default": "h2",
          "label": "Title stile"
        },
        {
          "type": "text",
          "id": "date",
          "label": "Date",
          "default": "11/09/2023"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Text",
          "default": "<p>text</p>"
        },
        {
          "type": "text",
          "id": "add_text",
          "label": "Additional text"
        },
        {
          "type": "color",
          "id": "bg_color",
          "default": "#F4F4F6",
          "label": "Background color"
        },
        {
          "type": "color",
          "id": "text_color",
          "default": "#000",
          "label": "Text color"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button text",
          "default": "Read more"
        },
        {
          "type": "url",
          "id": "button_url",
          "label": "Url"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Awards-reviews"
    }
  ]
}
{% endschema %}