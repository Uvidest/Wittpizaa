<style>
    .section-{{ section.id }} {
        padding-top: {{ section.settings.st }}px;
        padding-bottom: {{ section.settings.sb }}px;
    {% if section.settings.image_bg != blank %} background: url('{{ section.settings.image_bg.src | img_url: "large" }}'), lightgray 50% / cover no-repeat;
    {% else %} background: #000;
    {% endif %}
    }

    @media screen and (max-width: 768px) {
        .section-{{ section.id }} {
            padding-top: {{ section.settings.stm }}px;
            padding-bottom: {{ section.settings.sbm }}px;
        }
    }
</style>
<style>
    .product-main-video {
        background-size: cover;
    }

    .product-main-video-video {
        position: relative;
        padding-bottom: 62.4%;
    }

    .product-main-video-video video {
        width: 100%;
        height: 100%;
        left: 0;
        top: 0;
        position: absolute;
        object-fit: cover;
    }

    .product-main-video-wrapper {
        max-width: 1309px;
        margin: 0 auto;
    }

    .product-main-video-title {
        color: #FFF;
        text-align: center;
        font-family: var(--font-heading-family);
        font-size: 64px;
        font-style: normal;
        font-weight: 700;
        line-height: 113%;
        text-transform: uppercase;
        margin-bottom: 48px;
    }
    .svg_start{
        position: absolute;
        left:0;
        top: 0;
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    @media screen and (max-width: 768px) {
        .product-main-video-title {
            font-size: 40px;
            margin-bottom: 24px;
        }
    }
</style>

{% if section.settings.video != blank %}
    <div data-custom-section-id="{{ section.settings.sectionId }}" class="product-main-video section-{{ section.id }}">
        <div class="page-width">
            {% if section.settings.title != blank %}
                <div class="product-main-video-title">
                    {{ section.settings.title }}
                </div>
            {% endif %}
            <div class="product-main-video-wrapper">
                <div class="product-main-video-video video-{{ section.id }}">
                    {% if section.settings.video != blank %}
                        {{
                        section.settings.video
                        | video_tag: image_size: '1200x', loop: true, controls: true, muted: false
                        }}
                    {% endif %}
                    <div class="svg_start controller-{{ section.id }}">
                        <svg width="73px" height="73px" viewbox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" stroke="#ffffff33"><g id="SVGRepo_bgCarrier" stroke-width="0"></g><g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g><g id="SVGRepo_iconCarrier"> <circle opacity="0.5" cx="12" cy="12" r="10" stroke="#ffffff33" stroke-width="1.5"></circle> <path d="M13.8876 9.9348C14.9625 10.8117 15.5 11.2501 15.5 12C15.5 12.7499 14.9625 13.1883 13.8876 14.0652C13.5909 14.3073 13.2966 14.5352 13.0261 14.7251C12.7888 14.8917 12.5201 15.064 12.2419 15.2332C11.1695 15.8853 10.6333 16.2114 10.1524 15.8504C9.6715 15.4894 9.62779 14.7336 9.54038 13.2222C9.51566 12.7947 9.5 12.3757 9.5 12C9.5 11.6243 9.51566 11.2053 9.54038 10.7778C9.62779 9.26636 9.6715 8.51061 10.1524 8.1496C10.6333 7.78859 11.1695 8.11466 12.2419 8.76679C12.5201 8.93597 12.7888 9.10831 13.0261 9.27492C13.2966 9.46483 13.5909 9.69274 13.8876 9.9348Z" stroke="#ffffff33" stroke-width="1.5"></path> </g></svg>                    </div>
                </div>

            </div>
        </div>
    </div>
{% endif %}
<script>
    document.addEventListener("DOMContentLoaded", function() {
        let video = document.querySelector(".video-{{ section.id }} video")
      let controller = document.querySelector(".controller-{{ section.id }}")
        controller.addEventListener("click", ()=>{
            video.play()
            controller.classList.add("hidden")
        })
    })
</script>
{% schema %}
{
  "name": "Product video",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "default": "Title",
      "label": "Title"
    },
    {
      "type": "video",
      "id": "video",
      "label": "Video"
    },
    {
      "type": "image_picker",
      "id": "image_bg",
      "label": "Background image"
    },
    {
      "type": "text",
      "id": "sectionId",
      "label": "Id section for tabs on header"
    },
    {
      "type": "header",
      "content": "Space desktop"
    },
    {
      "type": "range",
      "id": "st",
      "label": "Space top",
      "unit": "px",
      "min": 0,
      "max": 200,
      "step": 2,
      "default": 16
    },
    {
      "type": "range",
      "id": "sb",
      "label": "Space bottom",
      "unit": "px",
      "min": 0,
      "max": 200,
      "step": 2,
      "default": 16
    },
    {
      "type": "header",
      "content": "Space mobile"
    },
    {
      "type": "range",
      "id": "stm",
      "label": "Space top",
      "unit": "px",
      "min": 0,
      "max": 200,
      "step": 2,
      "default": 16
    },
    {
      "type": "range",
      "id": "sbm",
      "label": "Space bottom",
      "unit": "px",
      "min": 0,
      "max": 200,
      "step": 2,
      "default": 16
    }
  ],
  "presets": [
    {
      "name": "Product video"
    }
  ]
}
{% endschema %}
