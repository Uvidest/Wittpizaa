<secrion class="product-list">
  <div class="product-list__wrapper">
    {% for block in section.blocks %}
      {% case block.type %}
        {% when 'content' %}
        <div class="product-list__content content">
          <p class="content__subtitle">{{ block.settings.subTitle }}</p>
          <h3 class="content__title">{{ block.settings.title }}</h3>
          <a href="#" class="content__link">
            {{ block.settings.text-link }}
            {{ block.settings.icon-link }}
          </a>
        </div>
        {% when 'goods' %}
        <div class="product-list__product product product-{{block.id}}">
          {% if block.settings.product.featured_image != blank %}
            {{ block.settings.product.featured_image | image_url: width: 280 | image_tag }}
          {% endif %} 
          
          <p class="product__name">{{ block.settings.product.title }}</p>
          <p class="product__price">{{ block.settings.product.price | money }}</p>
          <div class="product__buttons">
            <button
              type="button"
              data-id="{{block.settings.product.first_available_variant.id}}"
              class="product__add">
              {{ section.settings.text-add }}
            </button>
            <a href="{{block.settings.product.url}}" class="product__det">{{ section.settings.text-det }}</a>
          </div>
        </div>
      {% endcase %}
    {% endfor %}
  </div>
</secrion>
<style>
  .product-list__wrapper {
    background-position: 1% 48%;
    background-repeat: no-repeat;
    background-size: cover;
    padding: 96px 16px;
    display: flex;
    justify-content: center;
    gap: 24px;
    margin-bottom: 16px;
  }
  .product-list__content.content,
  .product-list__product.product {
    flex-basis: 25%;
  }
  .product-list__content.content {
    padding: 8px 16px;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }
  .product-list__product.product {
    background-color: #fff;
    display: flex;
    flex-direction: column;
    border-radius: 10px 10px 10px 10px;
  }

  .product-list__product.product > img {
    border-radius: 10px 10px 0 0;
    height: 270px;
    width: 100%;
    object-fit: cover;
    padding-bottom: 24px;
  }
  .product-list__product .product__name {
    padding: 0 16px;
    color: #171719;
    text-align: center;
    font-size: 20px;
    font-weight: 700;
    line-height: normal;
    text-transform: uppercase;
    padding-bottom: 16px;
    flex-grow: 1;
  }
  .product-list__product .product__price {
    color: #171719;
    text-align: center;
    font-size: 18px;
    font-weight: 400;
    line-height: normal;
    text-transform: uppercase;
    padding-bottom: 16px;
  }
  .product-list__product .product__buttons {
    display: flex;
    justify-content: space-between;
    gap: 8px;
    padding: 0 16px 24px 16px;
  }
  .product-list__product .product__add {
    flex-grow: 1;
    background-color: rgb(208, 103, 42);
    color: #fff;
    height: 35px;

    font-size: 16px;
    font-weight: 600;
    line-height: 130%;
    line-height: normal;
    border: 0.0833rem solid transparent;
    text-align: center;
    border-radius: 50px;
  }
  .product-list__product .product__det {
    display: flex;
    justify-content: center;
    align-items: center;
    text-align: center;
    flex-grow: 1;
    background-color: rgb(228, 228, 229);
    color: rgb(23, 23, 25);
    font-size: 16px;
    font-weight: 600;
    line-height: 130%;
    text-decoration: none;
    border-radius: 50px;
    height: 35px;
  }
  .content__subtitle {
    font-size: 39px;
    line-height: 39px;
    font-weight: 400;
    color: #fff;
    padding-bottom: 6px;
  }
  .content__title {
    font-size: 42px;
    font-weight: 700;
    line-height: 48px;
    color: #fff;
    margin: 0;
    padding-bottom: 40px;
  }
  .content__link {
    text-decoration: none;
    color: #fff;
    background-color: #000;
    display: inline-flex;
    align-items: center;
    padding: 6px 12px;
    width: fit-content;
  }
  @media(max-width: 992px) {
    .product-list__wrapper {
      flex-wrap: wrap;
    }
    .product-list__product.product,
    .product-list__content.content {
      flex-basis: calc(50% - 24px * 2);
    }
  }
  @media (max-width: 768px) {
    .product-list__product.product > img {
      height: 200px;
      padding-bottom: 16px;
    }
    .product-list__wrapper {
      gap: 14px;
    }
    .product-list__product.product,
    .product-list__content.content {
      flex-grow: 1;
    }
    .product-list__product .product__buttons {
      flex-wrap: wrap;
      padding: 0 16px 16px 16px;
    }
    .product-list__product .product__det,
    .product-list__product .product__add {
      font-size: 14px;
    }
    .content__subtitle {
      font-size: 29px;
    }
    .content__title {
      font-size: 32px;
    }
    .link {
      font-size: 12px;
    }

  }
</style>
{% style %}
  .product-list__wrapper {
    background-image:linear-gradient(90deg,rgba(0,0,0,0.50), rgba(34, 34, 35, 0.50)),url("{{section.settings.bc-image | image_url}}");
  }
{% endstyle %}
<script>
  const buttonsAdd = document.querySelectorAll('.product__add');

  buttonsAdd.forEach(btn => btn.addEventListener('click', function() {
    console.log(btn);
    const id = + btn.getAttribute('data-id');
    const currentCount = document.querySelector('.cart-count-bubble > span');
    let formData = {
      'items': [
        {
          'id': id,
          'quantity': 1
        }
      ]
    };

    fetch(window.Shopify.routes.root + 'cart/add.js', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json'
      },
      body: JSON.stringify(formData)
    }).then(response => {
      fetch(window.Shopify.routes.root + 'cart.js').then(res => res.json()).then(data => currentCount.innerHTML = `(${
        data.item_count
      })`)
      return response.json();
    }).catch((error) => {
      console.error('Error:', error);
    });
  }))
</script>
