<style>
    .section-{{ section.id }} {
        padding-top: {{ section.settings.st }}px;
        padding-bottom: {{ section.settings.sb }}px;
        background: {{ section.settings.bg_color }};
    }

    @media screen and (max-width: 768px) {
        .section-{{ section.id }} {
            padding-top: {{ section.settings.stm }}px;
            padding-bottom: {{ section.settings.sbm }}px;
        }
    }

    {% if section.settings.text_color != blank %}
    .section-{{ section.id }} *{
      color: {{ section.settings.text_color }};
    }
    {% endif %}

</style>
<style>
  .custom-slider-title{
    font-size: 64px;
    font-style: normal;
    font-weight: 700;
    line-height: normal;
    text-transform: uppercase;
    margin: 0;
    margin-bottom: 48px;
    text-align: center;
  }
  .custom-slide{
    display: flex;
    flex-direction: column;
    align-items: center;
    height: auto !important;
  }
  .custom-slide-text{
    text-align: center;
    flex: auto;
  }
  .custom-slide-logo{
    max-width: 100%;
    height: 50px;
    max-height: 50px;
  }
  .custom-slide-logo img{
    width: 100%;
    height: 100%;
    object-fit: contain;
  }
  .swiper-button-prev-slider svg,
  .swiper-button-next-slider svg{
    min-width: 40px;
    min-height: 40px;
    background: #5F5E5C;
    padding: 10px;
    border-radius: 50%;
  }
  .swiper-button-next-slider svg{
    transform: rotate(180deg);
  }
  .swiper-button-next-slider,
  .swiper-button-prev-slider{
    top: 0 ;
    margin: 0 ;
  }
  .swiper-button-next-slider{
    right: -40px ;
  }
  .swiper-button-prev-slider{
    left: -40px ;
  }

  .swiper-button-prev-slider:after,
  .swiper-button-next-slider:after{
    content: none !important;
  }
  .custom-slider-wrapper-box{
    position: relative;
  }
  .custom-slider-container{
    padding-left: 60px;
    padding-right: 60px;
  }
  .swiper-button-next-slider.swiper-button-disabled,
  .swiper-button-prev-slider.swiper-button-disabled{
      opacity: 0 !important;
  }
  .custom-slide-text{
    color: #FFF;
    font-size: 18px;
    font-style: normal;
    font-weight: 400;
    line-height: 130%; /* 23.4px */
    margin-bottom: 24px;
  }

  @media screen and (max-width: 1440px) {
    .custom-slide-logo{
      height: 30px;
    }
    .custom-slider-title{
      font-size: 40px;
    }
  }
  @media screen and (max-width: 768px) {
    .custom-slider-title{
      margin-bottom: 24px;
    }
  }
  @media screen and (max-width: 600px) {
    .custom-slider-title{
      margin-bottom: 24px;
    }
    .custom-slider-wrapper{
      flex-direction: column;
      gap: 24px
    }
    .swiper-button-next-slider,
    .swiper-button-prev-slider{
      display: none;
    }
    .custom-slider-container{
      padding-left: 15px;
      padding-right: 15px;
    }
    .custom-slide-text{
      font-size: 14px;
      margin-bottom: 16px;
    }
    .custom-slide-logo{
      height: 50px;
    }
  }
</style>

<div class="custom-slider section-{{ section.id }}">
  <div class="custom-slider-container page-width">
    <h2 class="custom-slider-title h1">
      {{ section.settings.title }}
    </h2>
    <div class="custom-slider-wrapper-box">
      <div class="swiper-button-prev-slider swiper-button-prev">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 32 32"><path d="M32 15H3.41l8.29-8.29-1.41-1.42-10 10a1 1 0 0 0 0 1.41l10 10 1.41-1.41L3.41 17H32z" data-name="4-Arrow Left"/></svg>
      </div>
      <div class="swiper-button-next swiper-button-next-slider">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 32 32"><path d="M32 15H3.41l8.29-8.29-1.41-1.42-10 10a1 1 0 0 0 0 1.41l10 10 1.41-1.41L3.41 17H32z" data-name="4-Arrow Left"/></svg>
      </div>
      <div class="custom-slider-list swiper">

        <div class="custom-slider-wrapper swiper-wrapper">
          {% for block in section.blocks %}
            {% if block.settings.text != blank or block.settings.logo != blank %}
              <div class="custom-slide swiper-slide">
              {% if block.settings.text != blank %}
                <div class="custom-slide-text">
                  {{ block.settings.text }}
                </div>
              {% endif %}
              {% if block.settings.logo != blank %}
                <div class="custom-slide-logo">
                  <img src="{{ block.settings.logo.src | img_url }}" alt="{{ block.settings.logo.alt }}">
                </div>
              {% endif %}
            {% endif %}
            </div>
          {% endfor %}
        </div>

      </div>
    </div>

  </div>

</div>

<script>
  if(window.innerWidth > 600) {
    window.addEventListener("load", function () {
      let swiper = new Swiper('.custom-slider-list', {
        // Optional parameters
        // direction: 'vertical',
        // loop: true,
        slidesPerView: 1,
        spaceBetween: 16,


        // Navigation arrows
        navigation: {
          nextEl: '.swiper-button-next-slider',
          prevEl: '.swiper-button-prev-slider',
        },
        breakpoints: {
          920: {
            slidesPerView: 4
          },
          600: {
            slidesPerView: 2
          }
        }
      });
    })
  }
</script>

{% schema %}
{
  "name": "Slider",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "default": "Title",
      "label": "Title"
    },
    {
      "type": "color",
      "id": "bg_color",
      "default": "#000",
      "label": "Background color"
    },
    {
      "type": "color",
      "id": "text_color",
      "default": "#fff",
      "label": "Text color"
    },
    {
      "type": "header",
      "content": "Space desktop"
    },
    {
      "type": "range",
      "id": "st",
      "label": "Space top",
      "unit": "px",
      "min": 0,
      "max": 200,
      "step": 2,
      "default": 16
    },
    {
      "type": "range",
      "id": "sb",
      "label": "Space bottom",
      "unit": "px",
      "min": 0,
      "max": 200,
      "step": 2,
      "default": 16
    },
    {
      "type": "header",
      "content": "Space mobile"
    },
    {
      "type": "range",
      "id": "stm",
      "label": "Space top",
      "unit": "px",
      "min": 0,
      "max": 200,
      "step": 2,
      "default": 16
    },
    {
      "type": "range",
      "id": "sbm",
      "label": "Space bottom",
      "unit": "px",
      "min": 0,
      "max": 200,
      "step": 2,
      "default": 16
    }
  ],
  "blocks": [
    {
      "type": "item",
      "name": "Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "logo",
          "label": "Image"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Text",
          "default": "text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Slider"
    }
  ]
}
{% endschema %}