<style>
    .section-{{ section.id }} {
        padding-top: {{ section.settings.st }}px;
        padding-bottom: {{ section.settings.sb }}px;
        background: {{ section.settings.bg_color }};
    }

    @media screen and (max-width: 768px) {
        .section-{{ section.id }} {
            padding-top: {{ section.settings.stm }}px;
            padding-bottom: {{ section.settings.sbm }}px;
        }
    }
    {% for block in section.blocks %}
        .block-{{ section.id }}-{{ forloop.index }} .q-a-item-text *{
          color: {{ block.settings.text_color }};
        }
    {% endfor %}
</style>

<style>
  .q-a-item-text p{
    margin: 0;
    margin-bottom: 1.6rem;
    font-size: 18px;
    letter-spacing: .01em;
  }
  .q-a-item-text ul{
    margin: 0;
    margin-bottom: 1.6rem;
    padding-left: 3.2rem;
  }
  .q-a-item-text > *:last-child{
    margin: 0;
  }
  .q-a-item-text h3{
    margin: 0;
    margin-bottom: 5px;
    font-size: 1.7rem;
  }
    .q-a-list{
        display: grid;
        grid-template-columns: 1fr 1fr 1fr;
        gap: 1.6rem
    }
    .text_block{
        padding: 48px;
    }
    .q-a-item-title{
      margin-bottom: 8px;
    }
    .q-a-item-image img{
      width: 100%;
      height: 100%;
      object-fit: cover;
      display: block;
    }
    .q-a-item-image{
      height: 100%;
    }
    .q-a-wrapper{
      padding: 0 1.6rem;
    }
    .q-a-item-image.size-contain img{
      object-fit: contain;
      object-position: top;
    }
    .q-a-ad-text{
      padding: 16px;
      margin: 0 auto;
      margin-top: 16px;
      text-align: center;
      background: rgb(0,0,0,.1);
      border-radius: 10px;
      font-weight: 600;
      line-height: 1.4rem;
      font-size: 18px;
      letter-spacing: 0.01em;
    }

  @media screen and (max-width: 990px) {
    .q-a-list{
      display: flex;
      flex-direction: column;
    }
  }
</style>

<div class="q-a section-{{ section.id }}">
    <div class="q-a-wrapper">
        <div class="q-a-list">
            {% for block in section.blocks %}
                {%- case block.type -%}
                    {%- when 'text_block' -%}
                        {% if block.settings.title != blank and block.settings.text != blank %}
                        <div style="background: {{ block.settings.bg_color }}; grid-column: span {{ block.settings.width }};" class="q-a-item text_block block-{{ section.id }}-{{ forloop.index }}">
                            {% if block.settings.title != blank %}
                                    <div style="color: {{ block.settings.text_color }}" href="{{ block.settings.url }}" class="q-a-item-title h3">
                                        {{ block.settings.title }}
                                    </div>
                            {% endif %}
                            {% if block.settings.text != blank %}
                                <div style="color: {{ block.settings.text_color }}" class="q-a-item-text regular">
                                    {{ block.settings.text }}
                                </div>
                            {% endif %}
                          {% if block.settings.add_text != blank %}
                            <div class="q-a-ad-text">
                              {{ block.settings.add_text }}
                            </div>
                            {% endif %}
                        {% endif %}
                        </div>
                    {%- when 'image' -%}
                    {% if block.settings.image != blank %}
                        <div style="grid-column: span {{ block.settings.width }};" class="q-a-item">
                            <div class="q-a-item-image size-{{ block.settings.image_ratio }}">
                                {%- capture sizes -%}
                                    {{ settings.page_width | divided_by: 5 | round }}px}}
                                {%- endcapture -%}

                                {{ block.settings.image | image_url: width: 1946 | image_tag:
                                loading: lazy,
                                sizes: sizes,
                                widths: '246, 493, 600, 713, 823, 990, 1100, 1206, 1346, 1426, 1646, 1946'
                                }}
                            </div>
                        </div>
                    {% endif %}
                {% endcase %}
            {% endfor %}
        </div>


    </div>
</div>

{% schema %}
{
  "name": "Q and A",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "Space desktop"
    },
    {
      "type": "range",
      "id": "st",
      "label": "Space top",
      "unit": "px",
      "min": 0,
      "max": 200,
      "step": 2,
      "default": 16
    },
    {
      "type": "range",
      "id": "sb",
      "label": "Space bottom",
      "unit": "px",
      "min": 0,
      "max": 200,
      "step": 2,
      "default": 16
    },
    {
      "type": "header",
      "content": "Space mobile"
    },
    {
      "type": "range",
      "id": "stm",
      "label": "Space top",
      "unit": "px",
      "min": 0,
      "max": 200,
      "step": 2,
      "default": 16
    },
    {
      "type": "range",
      "id": "sbm",
      "label": "Space bottom",
      "unit": "px",
      "min": 0,
      "max": 200,
      "step": 2,
      "default": 16
    }
  ],
  "blocks": [
    {
      "type": "text_block",
      "name": "Text block",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Title"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Text",
          "default": "<p>text</p>"
        },
        {
          "type": "text",
          "id": "add_text",
          "label": "Additional text"
        },
        {
          "type": "color",
          "id": "bg_color",
          "default": "#000",
          "label": "Background color"
        },
        {
          "type": "color",
          "id": "text_color",
          "default": "#fff",
          "label": "Text color"
        },
        {
          "type": "range",
          "id": "width",
          "label": "Width",
          "min": 1,
          "max": 3,
          "step": 1,
          "default": 1
        }
      ]
    },
    {
      "type": "image",
      "name": "Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "range",
          "id": "width",
          "label": "Width",
          "min": 1,
          "max": 3,
          "step": 1,
          "default": 1
        },
        {
          "type": "select",
          "id": "image_ratio",
          "options": [
            {
              "value": "cover",
              "label": "Cover"
            },
            {
              "value": "contain",
              "label": "Contain"
            }
          ],
          "default": "cover",
          "label": "Image ratio"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Q and A"
    }
  ]
}
{% endschema %}