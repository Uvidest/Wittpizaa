{{ 'template-collection.css' | asset_url | stylesheet_tag }}
{{ 'component-loading-overlay.css' | asset_url | stylesheet_tag }}
{{ 'component-price.css' | asset_url | stylesheet_tag }}
{{ 'section-main-product.css' | asset_url | stylesheet_tag }}
{{ 'section-featured-product.css' | asset_url | stylesheet_tag }}
{{ 'component-deferred-media.css' | asset_url | stylesheet_tag }}
{{ 'component-rating.css' | asset_url | stylesheet_tag }}
{{ 'component-volume-pricing.css' | asset_url | stylesheet_tag }}

{{ 'custom-collection-grid-ovens.css' | asset_url | stylesheet_tag }}

<script src="{{ 'product-info.js' | asset_url }}" defer="defer"></script>
<script src="{{ 'price-per-item.js' | asset_url }}" defer="defer"></script>
<script src="{{ 'product-modal.js' | asset_url }}" defer="defer"></script>
<script src="{{ 'media-gallery.js' | asset_url }}" defer="defer"></script>

{%- style -%}
    .section-{{ section.id }} {
    padding-top: {{ section.settings.st }}px;
    padding-bottom: {{ section.settings.sb }}px;
    background: {{ section.settings.back_color }}
    }

    @media screen and (max-width: 768px) {
    .section-{{ section.id }} {
    padding-top: {{ section.settings.stm }}px;
    padding-bottom: {{ section.settings.sbm }}px;
    }
    }
{%- endstyle -%}


<div class="section-{{ section.id }} custom-collection">

        {% comment %} Sort is the first tabbable element when filter type is vertical {% endcomment %}
        <div class="page-width">
            <div
                    class="product-grid-container{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
                    id="ProductGridContainer"
                    {% if settings.animations_reveal_on_scroll %}
                        data-cascade
                    {% endif %}
            >
                <h2 class="product-grid-title h1">
                    {{ section.settings.title }}
                </h2>
                {%- if collection.products.size == 0 -%}
                    <div class="collection collection--empty page-width" id="product-grid" data-id="{{ section.id }}">
                        <div class="loading-overlay gradient"></div>
                        <div class="title-wrapper center">
                            <h2 class="title title--primary">
                                {{ 'sections.collection_template.empty' | t -}}
                                <br>
                                {{
                                'sections.collection_template.use_fewer_filters_html'
                                | t: link: collection.url, class: 'underlined-link link'
                                }}
                            </h2>
                        </div>
                    </div>
                {%- else -%}
                    <div class="collection">
                        <div class="loading-overlay gradient"></div>

                        <ul
                                id="product-grid"
                                data-id="{{ section.id }}"
                                class="
                grid product-grid grid--{{ section.settings.columns_mobile }}-col-tablet-down
                grid--{{ section.settings.columns_desktop }}-col-desktop
              "
                        >
                            {%- for product in collection.products -%}
                                {% assign lazy_load = false %}
                                {%- if forloop.index > 2 -%}
                                    {%- assign lazy_load = true -%}
                                {%- endif -%}
                                <li
                                        class="collection-item grid__item{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
                                        {% if settings.animations_reveal_on_scroll %}
                                            data-cascade
                                            style="--animation-order: {{ forloop.index }};"
                                        {% endif %}
                                >
                                    {% render 'custom-featured-product-card',
                                            product: product,
                                            section: section,
                                            index: forloop.index
                                    %}
                                </li>
                            {%- endfor -%}
                        </ul>
                    </div>
                {%- endif -%}
            </div>
        </div>
    {% if section.settings.image_shape == 'arch' %}
        {% render 'mask-arch' %}
    {%- endif -%}
</div>

{% schema %}
{
  "name": "Coustom collection ovens",
  "class": "section",
  "settings": [
    {
  "type": "product_list",
  "id": "product_list",
  "label": "Products",
  "limit": 12
},
    {
      "type": "text",
      "id": "title",
      "default": "Title",
      "label": "Title"
    },
    {
      "type": "color",
      "id": "back_color",
      "label": "Background color"
    },
    {
      "type": "header",
      "content": "t:sections.main-collection-product-grid.settings.header__3.content"
    },
    {
      "type": "header",
      "content": "t:sections.main-collection-product-grid.settings.header__1.content"
    },
    {
      "type": "header",
      "content": "Space desktop"
    },
    {
      "type": "range",
      "id": "st",
      "label": "Space top",
      "unit": "px",
      "min": 0,
      "max": 200,
      "step": 2,
      "default": 16
    },
    {
      "type": "range",
      "id": "sb",
      "label": "Space bottom",
      "unit": "px",
      "min": 0,
      "max": 200,
      "step": 2,
      "default": 16
    },
    {
      "type": "header",
      "content": "Space mobile"
    },
    {
      "type": "range",
      "id": "stm",
      "label": "Space top",
      "unit": "px",
      "min": 0,
      "max": 200,
      "step": 2,
      "default": 16
    },
    {
      "type": "range",
      "id": "sbm",
      "label": "Space bottom",
      "unit": "px",
      "min": 0,
      "max": 200,
      "step": 2,
      "default": 16
    }
  ],
  "presets": [
    {
      "name": "Coustom collection ovens"
    }
  ]
}
{% endschema %}
